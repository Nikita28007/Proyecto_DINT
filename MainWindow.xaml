<Window x:Class="Proyecto_DINT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_DINT"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="850">
    <Window.Resources>
        <Style x:Key="flechas" TargetType="Image">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
        </Style>

        <Style x:Key="contador" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
           
        </Style>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Jugar">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image  Style="{StaticResource flechas}" />
                    <TextBlock Style="{StaticResource contador}" Text=""/><!--item seleccionado-->
                    <TextBlock Style="{StaticResource contador}" Text="/"/>
                    <TextBlock Style="{StaticResource contador}" Text=""/><!--numero total de peliculas-->
                    <Image  Style="{StaticResource flechas}"/>


                </StackPanel>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Height="400" Width="280"  Grid.Column="0"  />
                    <Label Grid.Column="1" Width="150" Height="100" Margin="0,30,0,0" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Button Grid.Column="1" Content="Button" HorizontalAlignment="Right" Margin="0,30,20,0" VerticalAlignment="Top" Width="75"/>




                </Grid>
            </DockPanel>
        </TabItem>
        <TabItem Header="Gestionar">
           
        </TabItem>



    </TabControl>
</Window>
